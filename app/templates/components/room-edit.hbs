{{#if allowEdits}}

  {{room.label}}:

  {{
    view 'select'
    content=allSchedules
    optionLabelPath='content.label'
    value=room.activeSchedule
    selection=room.activeSchedule
    prompt='No Schedule'
  }}

  <button {{action 'save'}}>Save</button>

  Temp: {{room.temp}}°C

  <div class="room__devices">

    {{#each room.thermostats as |device|}}

      {{device-view device=device}}

    {{/each}}

    {{#each room.relays as |device|}}

      {{device-view device=device}}

    {{/each}}

  </div>

{{else}}

  <div class="room__icon" {{action 'edit'}}>

    {{room.label}}<br>

    {{room.temp}}°C

  </div>

{{/if}}
