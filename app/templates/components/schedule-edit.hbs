<label>Label: {{input value=schedule.label}}</label>

<button {{action 'createNewEvent'}}>New Event</button>
<button {{action 'save'}}>Save</button>
<button {{action 'remove'}}>Remove</button>

<div class="schedule__events">

  <div class="schedule__events__day">

    {{#each mondayEvents as |event|}}

      {{event-edit event=event}}

    {{/each}}

  </div>

  <div class="schedule__events__day">

    {{#each tuesdayEvents as |event|}}

      {{event-edit event=event}}

    {{/each}}

  </div>

  <div class="schedule__events__day">

    {{#each wednesdayEvents as |event|}}

      {{event-edit event=event}}

    {{/each}}

  </div>

  <div class="schedule__events__day">

    {{#each thursdayEvents as |event|}}

      {{event-edit event=event}}

    {{/each}}

  </div>

  <div class="schedule__events__day">

    {{#each fridayEvents as |event|}}

      {{event-edit event=event}}

    {{/each}}

  </div>

  <div class="schedule__events__day">

    {{#each saturdayEvents as |event|}}

      {{event-edit event=event}}

    {{/each}}

  </div>

  <div class="schedule__events__day">

    {{#each sundayEvents as |event|}}

      {{event-edit event=event}}

    {{/each}}

  </div>

</div>
